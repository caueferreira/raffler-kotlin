<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBoxAddShortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewAddShortcut"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAddShortcut"
        style="@style/AppTheme.Text.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_regular"
        android:text="@string/custom_raffle_add_shortcut"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBoxAddShortcut"
        app:layout_constraintLeft_toRightOf="@+id/checkBoxAddShortcut"
        app:layout_constraintRight_toLeftOf="@+id/buttonEdit" />

    <Button
        android:id="@+id/buttonEdit"
        style="@style/AppTheme.ButtonPrimary.Small"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginRight="@dimen/margin_regular"
        android:text="@string/hint_edit"
        app:layout_constraintLeft_toRightOf="@+id/textViewAddShortcut"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="@dimen/padding_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxAddShortcut" />
</androidx.constraintlayout.widget.ConstraintLayout>
