<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_white_opaque</item>
        <item name="android:colorBackground">@color/color_white_opaque</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.AppActivityAnimation</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppTheme.AppActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.InputLayout" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_gray</item>
        <item name="colorControlActivated">@color/color_accent</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:foreground">@drawable/selector_button_primary_touched</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:textColor">@drawable/selector_button_primary_text</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
